<Window x:Class="Praktika2.SignUP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Praktika2"
        mc:Ignorable="d"
        Title="SignUP" MaxHeight="250" Width="450" ResizeMode="NoResize" Background="#F0F0F0" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="TBLog" materialDesign:HintAssist.Hint="Логин" HorizontalAlignment="Stretch" Margin="20"/>
            <TextBox Name="TBPas" materialDesign:HintAssist.Hint="Пароль" HorizontalAlignment="Stretch" Margin="20"/>
            <Button Content="Зарегистрироваться " FontWeight="Bold" Margin="20,0,20,20" IsDefault="True" Click="Button_Click_SignUP"/>

        </StackPanel>
    </Grid>
</Window>
